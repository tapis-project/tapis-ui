{
  "compilerOptions": {
    "declaration": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": ["esnext"],
    "types": ["node"],
    "typeRoots": ["./types", "node_modules/@types"],
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/bundle.ts", "src/tasks.ts"]
}
