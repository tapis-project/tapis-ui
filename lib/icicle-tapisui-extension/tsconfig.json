{
  "compilerOptions": {
    "jsx": "react-jsx",
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "dist",
    "lib": ["dom", "esnext", "dom.iterable"],
    "types": ["node"],
    "typeRoots": ["./types", "node_modules/@types"],
    "incremental": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "bundle.ts", "tasks.ts"]
}
